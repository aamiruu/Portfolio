@model IEnumerable<Portfolio.Models.UserPortfolio>

@{
    ViewData["Title"] = "پرتفولیوهای من";
}

<h2 class="mt-4 mb-3 text-center">پرتفولیوهای من</h2>

<div class="text-center mb-3">
    <a asp-action="Create" class="btn btn-primary">افزودن پرتفولیو جدید</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>تصویر</th>
            <th>عنوان</th>
            <th>توضیحات</th>
            <th>لینک</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" width="100" height="80" style="object-fit: cover;" />
                    }
                    else
                    {
                        <span>—</span>
                    }
                </td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Link))
                    {
                        <a href="@item.Link" target="_blank">مشاهده</a>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">ویرایش</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
